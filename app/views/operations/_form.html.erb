<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :otype, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :otype, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :wallet_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :wallet_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :category_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-4">
      <%= form.text_field :category_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :amount, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= form.text_field :amount, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :odate, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= form.date_field :odate, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-6">
      <%= form.submit class: "btn btn-success btn-md center-block" %>
      <%= submit_tag("Очистити", {name: "reset", id: "reset", type: "reset", class: "btn btn-success btn-md center-block"}) %>
    </div>
  </div>
<% end %>
