<div class="container pt-5">
    <p style="color: red"><%= notice %></p>
    <h1>Звіт по категоріям</h1>
    <%= form_with url: reports_result_by_category_path, method: :get do |form| %>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :start_date, "Початок періоду", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-2">
        <%= form.date_field :start_date, :value => Operation.set_start_date_default, required: true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :end_date, "Кінець періоду", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-2">
        <%= form.date_field :end_date, :value => Operation.set_end_date_default, required: true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :otype, "Тип операції", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6 form-check form-check-inline mb-3 mt-3">
        <%= form.collection_radio_buttons :otype, @otype_options, :first, :last, {}, required: true %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :wallet, "Гаманець", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
        <%= form.select :wallet_id, options_for_select(@wallets), :include_blank => "Вибери гаманець", class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-6">
        <%= form.submit 'Згенерувати', class: "btn btn-success btn-md center-block" %>
        <%= form.submit("Очистити", { :name => 'reset', :id => 'reset_button', :type => "reset", class: "btn btn-success btn-md center-block" }) %>
        </div>
    </div>
    <% end %>
</div>
