    <label for="start_date">Дата YYYY-MM-DD</label>
    <input type="date" id="start_day" name="start_day" required><br>
    <label for="end_date">Дата YYYY-MM-DD</label>
    <input type="date" id="end_day" name="end_day" required><br>
    <label for="otype">Тип операції</label>
