<div class="container pt-5">
    <h1>Звіт по гаманцям</h1>
    <%= form_with url: reports_result_by_wallets_path, method: :get do |form| %>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :start_date, "Дата YYYY-MM-DD", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-2">
        <%= form.date_field :start_date, required: true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :end_date, "Дата YYYY-MM-DD", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-2">
        <%= form.date_field :end_date, required: true, class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :otype, "Тип операції", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
        <%= form.select :otype, options_for_select(@otypes), :include_blank => "Вибери тип операції", class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <%= form.label :category, "Категорія", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-6">
        <%= form.select :category_id, options_for_select(@categories), :include_blank => "Вибери категорію", class: "form-control" %>
        </div>
    </div>
    <div class="form-group row mb-3 mt-3">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-6">
        <%= form.submit 'Згенерувати', class: "btn btn-success btn-md center-block" %>
        <%= form.submit("Очистити", { :name => 'reset', :id => 'reset_button', :type => "reset", class: "btn btn-success btn-md center-block" }) %>
        </div>
    </div>
    <% end %>
</div>