<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> збереження категорії відхилено:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3 mt-3">
    <%= form.label :name, "Назва", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3 mt-3">
      <%= form.label :description, "Опис", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-8">
        <%= form.text_field :description, class: "form-control" %>
      </div>
  </div>

  <div class="form-group row mb-3 mt-3">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-6">
      <%= form.submit "Підтвердити", class: "btn btn-success btn-md center-block" %>
      <%= form.button("Очистити", {name: "clear", id: "clear", type: "button", class: "btn btn-success btn-md center-block"}) %>
    </div>
  </div>
  <script>
    const inputs = document.querySelectorAll('#category_name, #category_description');
    const button = document.getElementById('clear');
    button.onclick = function() {
      inputs.forEach(element => {
        element.value = '';
      });
    }
  </script>
<% end %>
